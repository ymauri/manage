{% extends 'AdminBundle::frame.html.twig' %}
{% block title%} Cash Closure{% endblock %}
{% block body %}
    
    <div class='container global-container'>
        <div class="row">
            <h2>List - Cash Closure Restaurant</h2>
            <div class="table-responsive">
                <label class="info pull-right"><a href="{{ path('cashclosure_new') }}">Create new</a></label>
                <br/>
                <br/>
                <table class="table table-striped table-bordered table-condensed  table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td><a href="{{ path('cashclosure_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                <td>{{ entity.name }}</td>
                                <td>{% if entity.dated %}{{ entity.dated|date('Y-m-d') }}{% endif %}</td>
                                <td>
                                    <a href="{{ path('cashclosure_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-search"></span></a>
                                    <a href="{{ path('cashclosure_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                                    
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <label class="info pull-right"><a href="{{ path('cashclosure_new') }}">Create new</a></label>
            </div>
        </div>
    </div>
{% endblock %}
