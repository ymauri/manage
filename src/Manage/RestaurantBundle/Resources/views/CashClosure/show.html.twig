{% extends 'AdminBundle::frame.html.twig' %}

{% block body -%}
    <h1>CashClosure</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ entity.details }}</td>
            </tr>
            <tr>
                <th>Dated</th>
                <td>{{ entity.dated|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Help</th>
                <td>{{ entity.help }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('cashclosure') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('cashclosure_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
