{% extends 'AdminBundle::frame.html.twig' %}
{% block title%} Cash Closure{% endblock %}    

{% block body %}
    <div class='container global-container'>
        <div class="row">
            <form id="form-basic-restaurant" class="container" action="{{path('cashclosure_new')}}" method="POST" {{form_enctype(form_basic)}} {{ form_enctype(form_total)}} {{ form_enctype(form_bill)}} >
                <div class="col-md-12"><h2 class="pull-left">I want to close the night (Service)<label class="info form-cashclosure-details">Details</label> <label class="info form-cashclosure-help">Help</label></h2> </div>
                <fieldset class="col-md-12 cashclosure-basic ">
                    <div class="for-errors"> 
                        {{form_errors(form_basic)}}
                    </div> 
                    <div id="form-cashclosure-show-details" class="col-md-offset-0"  hidden="true">
                        <div class=" form-group">
                          {{form_widget(form_basic.name, {'attr':{                       
                            'class' :'input-sm form-control',
                            'placeholder' : 'You can specify a name'
                            }})}}
                            
                        </div>
                        <div class="form-group" >
                          {{form_widget(form_basic.details, {'attr':{                       
                            'class' :'input-sm form-control',
                            'placeholder' : 'You can specify a briev anotations',
                            'style':"margin-bottom: 10px;"
                            }})}}  
                        </div>
                    </div>                   
                    
                    <div class=" form-group col-md-offset-0">
                        <!--<span class="glyphicon glyphicon-calendar"></span>-->
                        {{form_widget(form_basic.dated, {'attr':{                       
                          'class' :'input-sm form-control form-basic-restaurant-date',
                            'placeholder' : 'Date',
                          }})}}               
                        {{form_rest(form_basic)}}
                    </div>
                </fieldset>
                {% embed "RestaurantBundle:CashClosureTotal:new.html.twig"%}{% endembed %}
                {% embed "RestaurantBundle:CashClosureBeginBill:new.html.twig"%}{% endembed %}
                {% embed "RestaurantBundle:CashClosureBill:new.html.twig"%}{% endembed %}
                <fieldset>
                    <input type = 'button' class="btn btn-default" value="Cancel">
                    <input type = 'submit' class="btn btn-primary" value="Submit">  
                </fieldset>
           </form>
        </div>
    </div>         
  {% block javascript%}
    
    <script>
        $('#form-basic-restaurant').on('click', '.form-cashclosure-details', function(){
            var status = $('#form-cashclosure-show-details').prop('hidden')       
            
            $('#form-cashclosure-show-details').prop('hidden', !status)
            
        })
    </script>
{% endblock %}
{% endblock %}
