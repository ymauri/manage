{% extends 'RestaurantBundle::frame.html.twig' %}
{% block title %} Show user {% endblock %}
{% block body %}
<div class="portlet">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon icon-user"></i>Users
        </div>
        <div class="tools">
            <a href="{{path('user_new')}}" class=" blue">
                <i class="fa fa-plus"></i> Create new
            </a>
            <a href="{{path('user')}}" class=" blue">
                <i class="fa fa-list-alt"></i> List
            </a>
        </div>
    </div>
        <div class="portlet box blue-hoki">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-search"></i>View
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                {% if form_errors(delete_form) %}
                    <div class="alert alert-danger display-hide" style="display: block;">
                        <button class="close" data-close="alert"></button>
                        <span>  {{form_errors(delete_form)}} </span>
                    </div>
                {% endif %}
                <form class="container-fluid form-horizontal " >
                    <div class="form-body col-md-5">
                        <div class="row form-group">
                            {{form_label(delete_form.email,'Email',{'attr':{
                      'class' :' control-label',
                            }})}}
                            {{form_widget(delete_form.email, {'attr':{
                      'class' :' form-control',
                      'disabled':'disabled'
                            }})}}
                            {{form_errors(delete_form.email)}}
                        </div>
                        <div class="row form-group">
                            {{form_label(delete_form.name,'Name',{'attr':{
                      'class' :' control-label',
                            }})}}
                            {{form_widget(delete_form.name, {'attr':{
                      'class' :' form-control',
                      'disabled':'disabled'
                            }})}}
                            {{form_errors(delete_form.name)}}
                        </div>
                        <div class="row form-group ">
                            {{form_label(delete_form.lastname,'Last name',{'attr':{
                      'class' :' control-label',
                            }})}}
                            {{form_widget(delete_form.lastname, {'attr':{
                      'class' :' form-control',
                      'disabled':'disabled'
                            }})}}
                            {{form_errors(delete_form.lastname)}}
                        </div>
                                            <div class="row form-group " {% if app.user.role != 'ROLE_SUPERADMIN' %} hidden="hidden"  {% endif %}>

                    {{form_label(delete_form.role,'Role',{'attr':{                       
                      'class' :' control-label',
                      }})}}
                    {{form_widget(delete_form.role, {'attr':{                       
                      'class' :' form-control',
                      'disabled':'disabled'
                      }})}}  
                    {{form_errors(delete_form.role)}}  
                </div>
                    <div class="row form-group ">
                    {% if app.user.role == 'ROLE_SUPERADMIN' %}
                        <a  href="{{ path('user') }}">
                            <input type = 'button' class="btn btn-primary" value="Back">
                        </a>
                    {% endif %}
                    <a  href="{{ path('user_edit', {'id':entity.id}) }}">
                        <input type = 'button' class="btn btn-primary" value="Update">
                    </a>
                    </div>
                    </div>
                </form>
            </div>
            </div>
    {% endblock %}
