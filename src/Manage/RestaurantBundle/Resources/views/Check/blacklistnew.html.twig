{% extends 'AdminBundle::frame.html.twig' %}
{% block title %}Black List {% endblock %}
{% block body %}
<div class="portlet">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-list"></i>Black List
        </div>
        <div class="tools">
            <a href="{{path('blacklist_new')}}" class=" blue">
                <i class="fa fa-plus"></i> Create new
            </a>
            <a href="{{path('blacklist')}}" class=" blue">
                <i class="fa fa-list-alt"></i> List
            </a>
        </div>
    </div>
     <div class="portlet box blue-hoki">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-plus"></i>New
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
            {% if form_errors(form)%}
            <div class="form-errors alert alert-danger">
                {{form_errors(form)}}
            </div>
            {% endif %}
            <form class="container-fluid form-horizontal" action="{{path('blacklist_create')}}" method="POST" {{form_enctype(form)}}>
                <div class="form-body ">
                    <div class="col-md-5">
                        <div class="row form-group">
                            {{form_label(form.name,'Name',{'attr':{
                                'class' :' control-label',
                            }})}}
                            {{form_widget(form.name, {'attr':{
                                'class' :'input-sm pull-right form-control'
                            }})}}
                            {{form_errors(form.name)}}
                        </div>
                        <div class="row form-group">
                            {{form_label(form.email,'E-mail',{'attr':{
                                'class' :' control-label',
                            }})}}
                            {{form_widget(form.email, {'attr':{
                                'class' :'input-sm pull-right form-control'
                            }})}}
                            {{form_errors(form.email)}}
                        </div>
                        <div class="row form-group">
                            {{form_label(form.details,'Details',{'attr':{
                                'class' :' control-label',
                            }})}}
                            {{form_widget(form.details, {'attr':{
                                'class' :'input-sm pull-right form-control'
                            }})}}
                            {{form_errors(form.details)}}
                        </div>
                        <div class="row form-group">
                            {{form_label(form.listing,'Listing',{'attr':{
                                'class' :' control-label',
                            }})}}
                            {{form_widget(form.listing, {'attr':{
                                'class' :'input-sm pull-right form-control'
                            }})}}
                            {{form_errors(form.listing)}}
                        </div>
                        <div class="row form-group">
                            {{form_label(form.checkin,'Checkin',{'attr':{
                                'class' :' control-label',
                            }})}}
                            {{form_widget(form.checkin)}}
                            {{form_errors(form.checkin)}}
                        </div>
                        <div class="row form-group ">
                            {{ form_rest(form) }}
                        </div>

                    </div>
            </div>
            </form>
            </div>
        </div>
        </div>
{% endblock %}
