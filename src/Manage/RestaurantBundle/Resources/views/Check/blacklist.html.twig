{% extends 'AdminBundle::frame.html.twig' %}
{% block title%} Black List {% endblock %}
{% block body %}
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon icon-state-danger"></i> Black List
                </div>
                <div class="tools">                    
                    <a href="{{ path("blacklist_new") }}" class=" blue">
                        <i class="fa fa-plus"></i> Create new 
                    </a>
                </div>
            </div>
            <div class="portlet-body" style="display: block;">
                <br/>
                <br/>
                <i class="blue-hoki">{% if entities | length > 0 %}{{ entities | length }} Rows {% else %} No rows found {% endif %}</i>
                <div  class="table-responsive">
                    <div class="row">

                        <div class="col-md-7 col-sm-12">

                            <div class="dataTables_paginate paging_simple_numbers" id="sample_2_paginate">
                                <ul class="pagination">

                                    <li class="paginate_button previous {% if first %} disabled {% endif %}" aria-controls="sample_2" tabindex="0" id="sample_2_previous">
                                        <a href="{% if not first %} {{ path('blacklist', {'limit': 30, 'offset': (page - 1)*30}) }} {% else  %} #{% endif %}"><i class="fa fa-angle-double-left"></i></a>
                                    </li>
                                    <li class="paginate_button active" tabindex="0"><a href="#">Page {{ page + 1 }}</a></li>
                                    <li class="paginate_button next {% if last %} disabled {% endif %}" aria-controls="sample_2" tabindex="0" id="sample_2_next">
                                        <a href="{% if not last %}{{ path('blacklist', {'limit': 30, 'offset': (page + 1)*30}) }}{% else  %} #{% endif %}"><i class="fa fa-angle-double-right"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>

                    </div>
                    <table class="table table-striped table-condensed table-bordered table-advance table-hover">
                        <thead>
                        <tr>
                            <th class="hidden-xs counter"> #
                            </th>
                            <th >
                                <i class="fa fa-user"></i> Name
                            </th>
                            <th>
                                <i class="fa fa-envelope"></i> E-mail
                            </th>
                            <th class="hidden-xs">
                                <i class="fa fa-home"></i> Listing
                            </th>
                            <th class="hidden-xs">
                                <i class="fa fa-calendar"></i> Checkin
                            </th>
                            <th class="actions">

                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set c = 1 %}
                        {% for entity in entities %}
                            <tr class="">
                                <td class="highlight hidden-xs counter"><b>{{ c }}</b></td>
                                <td >{% if entity.name %}{{ entity.name }}{% endif %}</td>
                                <td >{% if entity.email %}{{ entity.email }}{% endif %}</td>
                                <td class="hidden-xs">{% if entity.listing %}{{ entity.listing.number }}{% endif %}</td>
                                <td class="hidden-xs">{% if entity.checkin %}{{ entity.checkin | date ('d-m-Y') }}{% endif %}</td>
                                <td>
                                    <div class="btn-group dropdown ">
                                        <button class="btn blue-hoki btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
                                            Actions  <i class="fa fa-angle-down"></i>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            <li>
                                                <a href="{{ path('blacklist_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span>Edit</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('blacklist_delete', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-trash"></span>Remove</a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                            {% set c = c + 1 %}
                        {% endfor %}

                        </tbody>
                    </table>
                    <div class="row">

                        <div class="col-md-7 col-sm-12">

                            <div class="dataTables_paginate paging_simple_numbers" id="sample_2_paginate">
                                <ul class="pagination">

                                    <li class="paginate_button previous {% if first %} disabled {% endif %}" aria-controls="sample_2" tabindex="0" id="sample_2_previous">
                                        <a href="{% if not first %} {{ path('blacklist', {'limit': 30, 'offset': (page - 1)*30}) }} {% else  %} #{% endif %}"><i class="fa fa-angle-double-left"></i></a>
                                    </li>
                                    <li class="paginate_button active" tabindex="0"><a href="#">Page {{ page + 1 }}</a></li>
                                    <li class="paginate_button next {% if last %} disabled {% endif %}" aria-controls="sample_2" tabindex="0" id="sample_2_next">
                                        <a href="{% if not last %}{{ path('blacklist', {'limit': 30, 'offset': (page + 1)*30}) }}{% else  %} #{% endif %}"><i class="fa fa-angle-double-right"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
                <i class="blue-hoki">{% if entities | length > 0 %}{{ entities | length }} Rows {% else %} No rows found {% endif %}</i>

            </div>
        </div>
{% endblock %}
