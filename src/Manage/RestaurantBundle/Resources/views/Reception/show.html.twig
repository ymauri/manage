{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Reception</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ entity.details }}</td>
            </tr>
            <tr>
                <th>Dated</th>
                <td>{{ entity.dated|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Vdstart</th>
                <td>{{ entity.vdstart }}</td>
            </tr>
            <tr>
                <th>Vdend</th>
                <td>{{ entity.vdend }}</td>
            </tr>
            <tr>
                <th>Vdamount</th>
                <td>{{ entity.vdamount }}</td>
            </tr>
            <tr>
                <th>Vnstart</th>
                <td>{{ entity.vnstart }}</td>
            </tr>
            <tr>
                <th>Vnend</th>
                <td>{{ entity.vnend }}</td>
            </tr>
            <tr>
                <th>Vnamount</th>
                <td>{{ entity.vnamount }}</td>
            </tr>
            <tr>
                <th>Thereisfree</th>
                <td>{{ entity.thereisfree }}</td>
            </tr>
            <tr>
                <th>Generalamount</th>
                <td>{{ entity.generalamount }}</td>
            </tr>
            <tr>
                <th>Halfprice</th>
                <td>{{ entity.halfprice }}</td>
            </tr>
            <tr>
                <th>Profit</th>
                <td>{{ entity.profit }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('reception') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('reception_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
