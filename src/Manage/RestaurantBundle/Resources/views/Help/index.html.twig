{% extends 'RestaurantBundle::frame.html.twig' %}
{% block title%} Help {% endblock %}
{% block body %}
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-list"></i>Help content
                </div>
                <div class="tools">                    

                </div>
            </div>
            <div class="table-responsive">
               <table class="table table-striped table-condensed table-bordered table-advance table-hover">
                    <thead>
                        <tr>
                          <th class="hidden-xs counter"> #

                          </th>
                            <th >
                                <i class="fa fa-certificate"></i> Formulario
                            </th>
                            <th class="actions"></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% set c = 1 %}
                        {% for entity in entities %}
                            <tr>
                                <td class="hidden-xs counter"><b>{{ c }}</b></td>
                                <td>{{ entity.form | capitalize }}</td>
                                <td>
                                    <div class="btn-group dropdown ">
                                        <button class="btn blue-hoki btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
                                            Actions  <i class="fa fa-angle-down"></i>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            <li>
                                                <a href="{{ path('help_edit', {'form':entity.form}) }}"><span class="glyphicon glyphicon-pencil"></span>Edit</a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                            {% set c = c + 1 %}
                        {% endfor %}
                    </tbody>
                </table>
                   
            </div>
        </div>
{% endblock %}
