                </tr>
                <tr style="height: 30px">
                    <td style="font-weight: bold;  ">Manager AVOND:</td>
                    <td colspan="3" ><input readonly="readonly" required="required" disabled="disabled" style=" font-size: 12px; color: black;" value="{% if entity_basic.manageravond %}{{ entity_basic.manageravond.name }}{% endif %}" type="text"></td>
                </tr>
                <tr style="height: 30px">
                    <td style="font-weight: bold;  ">Sluitingstijd (laatste gast vertrokken):</td>
                    <td colspan="3" ><input readonly="readonly" required="required" disabled="disabled" style=" font-size: 12px; color: black;" value="{{ entity_basic.lastguesttime | date ('h:i A') }}" type="text"></td>
