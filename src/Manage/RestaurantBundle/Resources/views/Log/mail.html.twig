        <table style="max-width: 600px; font-family: Lucida; font-size: 13px">
            <thead>
                <tr>
                    <td colspan="4"><img src="{{ asset('img/tphlogo.jpg')  }}" style="max-width: 280px; margin: 30px 175px 0;"></td>
                </tr>
                <tr> 
