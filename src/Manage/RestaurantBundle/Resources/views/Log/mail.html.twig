                <tr>
                    <td style="font-weight: bold;">Lunch Opmerkingen</td>
                    <td colspan="3"><textarea rows="5" cols="40" style="color: black; font-size: 12px" disabled="disabled"> {{entity_basic.keulunch }}</textarea></td>
