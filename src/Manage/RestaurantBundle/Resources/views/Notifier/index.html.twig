{% extends 'RestaurantBundle::frame.html.twig' %}
{% block title%} Notifier {% endblock %}
{% block body %}
    <div class="portlet">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon icon-envelope"></i>Notifiers
            </div>
            <div class="tools">

            </div>
        </div>
        <div class="portlet-body" style="display: block;">
            <div  class="table-responsive">
                <table class="table table-striped table-condensed table-bordered table-advance table-hover">
                    <thead>
                    <tr>
                        <th class="hidden-xs counter" > #

                        </th>
                        <th class="">
                            <i class="fa fa-check"></i> Form
                        </th>
                        <th class="hidden-xs">
                            <i class="fa fa-envelope"></i> Mails
                        </th>
                        <th class="hidden-xs">
                            <i class="fa fa-envelope"></i> Externals
                        </th>
                        <th class="actions">
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set c = 1 %}
                    {% for entity in entities %}
                        <tr >
                            <td class="highlight hidden-xs counter"><b>{{ c }}</b></td>
                            <td class="">{{ entity.description }}</td>
                            <td class="hidden-xs">{{ entity.mails }}</td>
                            <td class="hidden-xs">{{ entity.externals }}</td>
                            <td>
                                <div class="btn-group dropdown ">
                                    <button class="btn blue-hoki btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
                                        Actions  <i class="fa fa-angle-down"></i>
                                    </button>
                                    <ul class="dropdown-menu" role="menu">
                                        <li>
                                            <a href="{{ path('notifier_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-search"></span>View</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('notifier_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span>Edit</a>
                                        </li>
                                    </ul>
                                </div>
                             </td>
                        </tr>
                        {% set c = c + 1 %}
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

