{% extends 'RestaurantBundle::frame.html.twig' %}
{% block title %} Edit Notifier {% endblock %}
{% block body %}
<div class="portlet">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon icon-envelope"></i>Notifiers
        </div>
        <div class="tools">
            <a href="{{path('notifier')}}" class=" blue">
                <i class="fa fa-list-alt"></i> List
            </a>
        </div>
    </div>
<div class="portlet box blue-hoki">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-pencil"></i>Edit
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse">
            </a>
        </div>
    </div>
    <div class="portlet-body form">
        {% if form_errors(edit_form) %}
            <div class="alert alert-danger display-hide" style="display: block;">
                <button class="close" data-close="alert"></button>
                <span>  {{form_errors(edit_form)}} </span>
            </div>
        {% endif %}
        <form class="container-fluid form-horizontal" action="{{path('notifier_update', {'id':entity.id})}}" method="post" {{form_enctype(edit_form)}}>
            <input name="_method" value="PUT" type="hidden">
            <div class="form-body col-md-5">

                <div class="row form-group ">
                    <label class=" control-label"> Those mails beongs to: <b>{{ entity.description }}</b></label>
                </div>
                <div class="row form-group ">
                    {{form_label(edit_form.mails,'Mails (Semicolon separated)',{'attr':{
                        'class' :' control-label',
                    }})}}
                    {{form_widget(edit_form.mails, {'attr':{
                        'class' :' form-control'
                    }})}}
                    {{form_errors(edit_form.mails)}}
                </div>
                <div class="row form-group ">
                    {{form_label(edit_form.externals,'Externals (Semicolon separated)',{'attr':{
                        'class' :' control-label',
                    }})}}
                    {{form_widget(edit_form.externals, {'attr':{
                        'class' :' form-control'
                    }})}}
                    {{form_errors(edit_form.externals)}}
                </div>

                <div class="row form-group ">
                    {{ form_rest(edit_form) }}
                </div>
            </div>
        </form>
    </div>
    </div>
    {% endblock %}
