{% extends 'AdminBundle::frame.html.twig' %}
{% block title %} New User {% endblock %}
{% block body %}
<div class="portlet">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon icon-user"></i>Users
        </div>
        <div class="tools">
            <a href="{{path('user')}}" class=" blue">
                <i class="fa fa-list-alt"></i> List
            </a>
        </div>
    </div>
        <div class="portlet box blue-hoki">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-plus"></i>New
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                {% if form_errors(form) %}
                    <div class="alert alert-danger display-hide" style="display: block;">
                        <button class="close" data-close="alert"></button>
                        <span>  {{form_errors(form)}} </span>
                    </div>
                {% endif %}
                <form class="container-fluid form-horizontal " action="{{path('user_create')}}" method="POST" {{form_enctype(form)}}>
                    <div class="form-body col-md-5">
                        <div class="row form-group">
                            {{form_label(form.email,'Email',{'attr':{                       
                      'class' :' control-label',
                            }})}}
                            {{form_widget(form.email, {'attr':{                       
                      'class' :' form-control'
                            }})}}  
                            {{form_errors(form.email)}}  
                        </div>
                        <div class="row form-group">
                            {{form_label(form.name,'Name',{'attr':{                       
                      'class' :' control-label',
                            }})}}
                            {{form_widget(form.name, {'attr':{                       
                      'class' :' form-control'
                            }})}} 
                            {{form_errors(form.name)}}  
                        </div>
                        <div class="row form-group ">
                            {{form_label(form.lastname,'Last name',{'attr':{                       
                      'class' :' control-label',
                            }})}}
                            {{form_widget(form.lastname, {'attr':{                       
                      'class' :' form-control'
                            }})}}  
                            {{form_errors(form.lastname)}}  
                        </div>
                        <div class="row form-group ">
                    {{form_label(form.role,'Role',{'attr':{                       
                      'class' :' control-label',
                      }})}}
                    {{form_widget(form.role, {'attr':{                       
                      'class' :' form-control'
                      }})}}  
                    {{form_errors(form.role)}}  
                </div>
                        <div class="row form-group ">
                            {{form_label(form.password.first,'Password',{'attr':{                       
                      'class' :' control-label',
                            }})}}
                            {{form_widget(form.password.first, {'attr':{                       
                      'class' :' form-control'
                            }})}}  
                            {{form_errors(form.password.first)}}  
                        </div>
                        <div class="row form-group ">
                            {{form_label(form.password.second,'Retype passowrd',{'attr':{                       
                      'class' :' control-label',
                            }})}}
                            {{form_widget(form.password.second, {'attr':{                       
                      'class' :' form-control'
                            }})}}  
                            {{form_errors(form.password.second)}}  
                        </div>
                        <div class="row form-group ">
                            {{ form_rest(form) }}
                        </div>
                    </div>
                </form>
            </div>
        </div>
        </div>
{% endblock %}
