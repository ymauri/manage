{% extends 'AdminBundle::frame.html.twig' %}
{% block title%} Mails {% endblock %}
{% block body %}
    <div class="portlet">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon icon-envelope"></i>Mails
            </div>
            <div class="tools">

            </div>
        </div>
        <div class="portlet-body" style="display: block;">
            <div  class="table-responsive">
                <div class="row">

                    <div class="col-md-7 col-sm-12">

                        <div class="dataTables_paginate paging_simple_numbers" id="sample_2_paginate">
                            <ul class="pagination">

                                <li class="paginate_button previous {% if first %} disabled {% endif %}" aria-controls="sample_2" tabindex="0" id="sample_2_previous">
                                    <a href="{% if not first %} {{ path('notifier_mails', {'limit': 30, 'offset': (page - 1)*30}) }} {% else  %} #{% endif %}"><i class="fa fa-angle-double-left"></i></a>
                                </li>
                                <li class="paginate_button active" tabindex="0"><a href="#">Page {{ page + 1 }}</a></li>
                                <li class="paginate_button next {% if last %} disabled {% endif %}" aria-controls="sample_2" tabindex="0" id="sample_2_next">
                                    <a href="{% if not last %}{{ path('notifier_mails', {'limit': 30, 'offset': (page + 1)*30}) }}{% else  %} #{% endif %}"><i class="fa fa-angle-double-right"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
                <table class="table table-striped table-condensed table-bordered table-advance  table-hover">
                    <thead>
                    <tr>
                        <th class="hidden-xs counter" > #

                        </th>
                        <th class="">
                            <i class="fa fa-calendar-o"></i> Date
                        </th>
                        <th class="hidden-xs">
                            <i class="fa fa-align-justify"></i> Subject
                        </th>
                        <th class="hidden-xs">
                            <i class="fa fa-users"></i> Sent to
                        </th>
                        <th class="hidden-xs">
                            <i class="fa fa-check"></i> Status
                        </th>
                        <th class="actions">
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set c = (page *30)+1 %}
                    {% for entity in entities %}
                        <tr >
                            <td class="highlight hidden-xs counter"><b>{{ c }}</b></td>
                            <td class="">{{ entity.date | date('d-m-Y H:i:s')  }}</td>
                            <td class="hidden-xs">{{ entity.subject }}</td>
                            <td class="hidden-xs">{{ entity.to }}</td>
                            <td class="hidden-xs">{{ entity.status }}</td>
                            <td>
                                <div class="btn-group dropdown ">
                                    <button class="btn blue-hoki btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
                                        Actions  <i class="fa fa-angle-down"></i>
                                    </button>
                                    <ul class="dropdown-menu" role="menu">
                                        <li>
                                            <a href="{{ path('notifier_mails_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-search"></span>View</a>
                                        </li>
                                    </ul>
                                </div>
                             </td>
                        </tr>
                        {% set c = c + 1 %}
                    {% endfor %}

                    </tbody>
                </table>
                <div class="row">

                    <div class="col-md-7 col-sm-12">

                        <div class="dataTables_paginate paging_simple_numbers" id="sample_2_paginate">
                            <ul class="pagination">

                                <li class="paginate_button previous {% if first %} disabled {% endif %}" aria-controls="sample_2" tabindex="0" id="sample_2_previous">
                                    <a href="{% if not first %} {{ path('notifier_mails', {'limit': 30, 'offset': (page - 1)*30}) }} {% else  %} #{% endif %}"><i class="fa fa-angle-double-left"></i></a>
                                </li>
                                <li class="paginate_button active" tabindex="0"><a href="#">Page {{ page + 1 }}</a></li>
                                <li class="paginate_button next {% if last %} disabled {% endif %}" aria-controls="sample_2" tabindex="0" id="sample_2_next">
                                    <a href="{% if not last %}{{ path('notifier_mails', {'limit': 30, 'offset': (page + 1)*30}) }}{% else  %} #{% endif %}"><i class="fa fa-angle-double-right"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

